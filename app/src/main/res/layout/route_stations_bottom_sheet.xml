<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/route_stations_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_sheet_bottom_layout"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/_60sdp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <ImageButton
        android:id="@+id/sheet_drag_arrow"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/_5sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow"
        android:tint="@android:color/white" />

    <com.maps.subwaytransit.view.BottomSheetListView
        android:id="@+id/line_route_stations_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sheet_drag_arrow"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@android:color/white"
        android:divider="@color/gray_activated"
        android:dividerHeight="0.5dp" />

</RelativeLayout>